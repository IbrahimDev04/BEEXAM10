@model CreateEmployeeVM


<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Forms</h5>
                <div class="card">
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control">
                                <span class="text-danger" asp-validation-for="FullName"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <input asp-for="Description" class="form-control">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FacebookUrl" class="form-label"></label>
                                <input asp-for="FacebookUrl" class="form-control">
                                <span class="text-danger" asp-validation-for="FacebookUrl"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TwitterUrl" class="form-label"></label>
                                <input asp-for="TwitterUrl" class="form-control">
                                <span class="text-danger" asp-validation-for="TwitterUrl"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="InstagramUrl" class="form-label"></label>
                                <input asp-for="InstagramUrl" class="form-control">
                                <span class="text-danger" asp-validation-for="InstagramUrl"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="LinkedInUrl" class="form-label"></label>
                                <input asp-for="LinkedInUrl" class="form-control">
                                <span class="text-danger" asp-validation-for="LinkedInUrl"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label"></label>
                                <input asp-for="ImageFile" class="form-control">
                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                            </div>
                            <div class="mb-5">
                                <label asp-for="JobId" class="form-label"></label>
                                    <select asp-for="JobId" class="form-select mb-3">

                                        @foreach (var i in ViewBag.Job)
                                        {
                                            <option value="@i.Id">@i.Name</option>
                                        }

                                    </select>
                            </div>
                            
                            
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>